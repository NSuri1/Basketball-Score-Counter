<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.suriosity.basketballscorecounter.MainActivity"
    android:background="#FFF3E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:textColor="#000000"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/team_a_score"
                android:text="0"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="35sp"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/team_a_3point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3 Points!"
                android:textAllCaps="true"
                android:layout_marginBottom="10dp"
                android:background="#FF9800"
                android:onClick="threePointsA"
                android:textSize="16sp"
                android:padding="5dp"/>
            <Button
                android:id="@+id/team_a_2point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2 Points!"
                android:textAllCaps="true"
                android:layout_marginBottom="10dp"
                android:background="#FF9800"
                android:onClick="twoPointsA"
                android:textSize="16sp"
                android:padding="5dp"/>
            <Button
                android:id="@+id/team_a_free_throw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Throw!"
                android:textAllCaps="true"
                android:background="#FF9800"
                android:onClick="freeThrowA"
                android:textSize="16sp"
                android:padding="5dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="320dp"
            android:background="#757575"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="#000000"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/team_b_score"
                android:text="0"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="35sp"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/team_b_3point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3 Points!"
                android:textAllCaps="true"
                android:layout_marginBottom="10dp"
                android:background="#FF9800"
                android:onClick="threePointsB"
                android:textSize="16sp"
                android:padding="5dp"/>
            <Button
                android:id="@+id/team_b_2point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2 Points!"
                android:textAllCaps="true"
                android:layout_marginBottom="10dp"
                android:background="#FF9800"
                android:onClick="twoPointsB"
                android:textSize="16sp"
                android:padding="5dp"/>
            <Button
                android:id="@+id/team_b_free_throw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Throw!"
                android:textAllCaps="true"
                android:background="#FF9800"
                android:onClick="freeThrowB"
                android:textSize="16sp"
                android:padding="5dp"/>
            
        </LinearLayout>
    </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textAllCaps="true"
            android:id="@+id/reset"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:background="#FF9800"
            android:onClick="reset"
            android:textSize="16sp"
            android:padding="5dp"/>

</RelativeLayout>
